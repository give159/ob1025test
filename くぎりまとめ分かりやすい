# ã€ã‚³ãƒ”ãƒ¼é–‹å§‹ï¼šã“ã“ã‹ã‚‰ä¸‹ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ test_president.py ã«è²¼ã‚Šä»˜ã‘ã€‘
"""
test_president.py
Presidentã‚¯ãƒ©ã‚¹å°‚ç”¨ãƒ†ã‚¹ãƒˆãƒ•ã‚¡ã‚¤ãƒ«
"""

import unittest
import sys
from io import StringIO
from employee import Employee
from staff import Staff
from president import President
from company import Company


class TestPresident(unittest.TestCase):
    """Presidentã‚¯ãƒ©ã‚¹ã®ãƒ†ã‚¹ãƒˆã‚±ãƒ¼ã‚¹"""
    
    def setUp(self):
        """å„ãƒ†ã‚¹ãƒˆã®å‰ã«å®Ÿè¡Œã•ã‚Œã‚‹æº–å‚™å‡¦ç†"""
        self.company = Company()
        self.president = self.company.ceo
    
    def test_inheritance(self):
        """ç¶™æ‰¿ã®ãƒ†ã‚¹ãƒˆ"""
        self.assertIsInstance(self.president, Employee)
        print("âœ“ Presidentç¶™æ‰¿ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_name_override(self):
        """get_name()ã®ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ãƒ†ã‚¹ãƒˆ"""
        self.president.set_name("å‰äº•æ‰äºº")
        self.assertEqual(self.president.get_name(), "å‰äº•æ‰äººç¤¾é•·")
        print("âœ“ åå‰ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_name_override_empty(self):
        """ç©ºã®åå‰ã§ã®ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ãƒ†ã‚¹ãƒˆ"""
        # åå‰ã‚’è¨­å®šã—ãªã„å ´åˆ
        self.assertEqual(self.president.get_name(), "ç¤¾é•·")
        print("âœ“ ç©ºã®åå‰ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_company_reference(self):
        """ä¼šç¤¾ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ã¸ã®å‚ç…§ãƒ†ã‚¹ãƒˆ"""
        self.assertIsNotNone(self.president._company)
        self.assertEqual(self.president._company, self.company)
        print("âœ“ ä¼šç¤¾å‚ç…§ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_dismiss_method_single(self):
        """dismissãƒ¡ã‚½ãƒƒãƒ‰ - 1äººè§£é›‡ã®ãƒ†ã‚¹ãƒˆ"""
        # ç¤¾å“¡ã‚’è¿½åŠ 
        staff1 = Staff()
        staff1.set_name("å±±ç”°å¤ªéƒ")
        self.company.staffs.append(staff1)
        
        staff2 = Staff()
        staff2.set_name("ç”°ä¸­èŠ±å­")
        self.company.staffs.append(staff2)
        
        # è§£é›‡å‰ã®ç¢ºèª
        self.assertEqual(len(self.company.staffs), 2)
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # è§£é›‡å®Ÿè¡Œ
        self.president.dismiss("å±±ç”°å¤ªéƒ")
        
        # æ¨™æº–å‡ºåŠ›ã‚’å¾©å…ƒ
        sys.stdout = sys.__stdout__
        
        # è§£é›‡å¾Œã®ç¢ºèª
        self.assertEqual(len(self.company.staffs), 1)
        self.assertEqual(self.company.staffs[0].get_name(), "ç”°ä¸­èŠ±å­")
        print("âœ“ dismisså˜ä¸€è§£é›‡ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_dismiss_method_multiple(self):
        """dismissãƒ¡ã‚½ãƒƒãƒ‰ - è¤‡æ•°è§£é›‡ã®ãƒ†ã‚¹ãƒˆ"""
        # ç¤¾å“¡ã‚’3äººè¿½åŠ 
        staff1 = Staff()
        staff1.set_name("å±±ç”°å¤ªéƒ")
        self.company.staffs.append(staff1)
        
        staff2 = Staff()
        staff2.set_name("ç”°ä¸­èŠ±å­")
        self.company.staffs.append(staff2)
        
        staff3 = Staff()
        staff3.set_name("ä½è—¤æ¬¡éƒ")
        self.company.staffs.append(staff3)
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # 2äººè§£é›‡
        self.president.dismiss("å±±ç”°å¤ªéƒ")
        self.president.dismiss("ä½è—¤æ¬¡éƒ")
        
        # æ¨™æº–å‡ºåŠ›ã‚’å¾©å…ƒ
        sys.stdout = sys.__stdout__
        
        # è§£é›‡å¾Œã®ç¢ºèª
        self.assertEqual(len(self.company.staffs), 1)
        self.assertEqual(self.company.staffs[0].get_name(), "ç”°ä¸­èŠ±å­")
        print("âœ“ dismissè¤‡æ•°è§£é›‡ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_dismiss_nonexistent(self):
        """å­˜åœ¨ã—ãªã„ç¤¾å“¡ã®è§£é›‡ãƒ†ã‚¹ãƒˆ"""
        # ç¤¾å“¡ã‚’1äººè¿½åŠ 
        staff1 = Staff()
        staff1.set_name("å±±ç”°å¤ªéƒ")
        self.company.staffs.append(staff1)
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # å­˜åœ¨ã—ãªã„ç¤¾å“¡ã‚’è§£é›‡
        self.president.dismiss("å­˜åœ¨ã—ãªã„äºº")
        
        # æ¨™æº–å‡ºåŠ›ã‚’å¾©å…ƒ
        sys.stdout = sys.__stdout__
        
        # ç¤¾å“¡æ•°ã¯å¤‰ã‚ã‚‰ãªã„
        self.assertEqual(len(self.company.staffs), 1)
        print("âœ“ å­˜åœ¨ã—ãªã„ç¤¾å“¡è§£é›‡ãƒ†ã‚¹ãƒˆæˆåŠŸ")



from employee import Employee
from typing import TYPE_CHECKING

if TYPE_CHECKING:
    from company import Company


class President(Employee):
    """
    ç¤¾é•·ã‚¯ãƒ©ã‚¹
    
    Employeeã‚¯ãƒ©ã‚¹ã‚’ç¶™æ‰¿ã—ã€ä¼šç¤¾ã¸ã®å‚ç…§ã‚’æŒã¡ã¾ã™ã€‚
    get_name()ãƒ¡ã‚½ãƒƒãƒ‰ã‚’ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ã—ã¦ã€Œç¤¾é•·ã€ã®è‚©æ›¸ãã‚’è¿½åŠ ã—ã¾ã™ã€‚
    
    Attributes:
        _company (Company): æ‰€å±ã™ã‚‹ä¼šç¤¾ã®ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹
    """
    
    def __init__(self, company: 'Company'):
        """
        Presidentã‚¯ãƒ©ã‚¹ã®ã‚³ãƒ³ã‚¹ãƒˆãƒ©ã‚¯ã‚¿
        
        Args:
            company (Company): æ‰€å±ã™ã‚‹ä¼šç¤¾ã®ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹
        """
        super().__init__()
        self._company: 'Company' = company
    
    def get_name(self) -> str:
        """
        ç¤¾é•·ã®åå‰ã‚’å–å¾—ã™ã‚‹ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰ï¼‰
        
        åå‰ã®æœ«å°¾ã«ã€Œç¤¾é•·ã€ã®è‚©æ›¸ãã‚’è¿½åŠ ã—ã¾ã™ã€‚
        
        Returns:
            str: ã€Œç¤¾é•·ã€ã®è‚©æ›¸ãä»˜ãã®åå‰
        """
        return self._name + "ç¤¾é•·"
    
    def dismiss(self, name: str) -> None:
        """
        æŒ‡å®šã•ã‚ŒãŸåå‰ã®ç¤¾å“¡ã‚’è§£é›‡ã™ã‚‹
        
        Args:
            name (str): è§£é›‡ã™ã‚‹ç¤¾å“¡ã®åå‰
        """
        self._company._staffs = [
            staff for staff in self._company._staffs 
            if staff.get_name() != name
        ]
        print(f"[è§£é›‡é€šçŸ¥] {name}ã•ã‚“ã‚’è§£é›‡ã—ã¾ã—ãŸ")
    
    def __del__(self):
        """ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿ - ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ãŒå‰Šé™¤ã•ã‚Œã‚‹ã¨ãã«å‘¼ã°ã‚Œã‚‹"""
        print(f"[ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿] Presidentã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ '{self._name}' ãŒå‰Šé™¤ã•ã‚Œã¾ã—ãŸ")
# ã€ã‚³ãƒ”ãƒ¼çµ‚äº†ï¼šã“ã“ã¾ã§ president.pyã€‘


# ============================================================
# ãƒ•ã‚¡ã‚¤ãƒ«4: company.py
# ============================================================
# ã€ã‚³ãƒ”ãƒ¼é–‹å§‹ï¼šã“ã“ã‹ã‚‰ä¸‹ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ company.py ã«è²¼ã‚Šä»˜ã‘ã€‘
"""
company.py
ä¼šç¤¾ã‚¯ãƒ©ã‚¹ãƒ¢ã‚¸ãƒ¥ãƒ¼ãƒ«
"""

from typing import List
from functools import wraps
from staff import Staff
from president import President


def print_employee_count(func):
    """
    ç¤¾å“¡æ•°ã‚’è¡¨ç¤ºã™ã‚‹ãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿
    
    ãƒ¡ã‚½ãƒƒãƒ‰å®Ÿè¡Œå¾Œã«ç¾åœ¨ã®ç¤¾å“¡æ•°ï¼ˆç¤¾é•·å«ã‚€ï¼‰ã‚’è¡¨ç¤ºã—ã¾ã™ã€‚
    
    Args:
        func: ãƒ‡ã‚³ãƒ¬ãƒ¼ãƒˆã™ã‚‹é–¢æ•°
        
    Returns:
        ãƒ©ãƒƒãƒ—ã•ã‚ŒãŸé–¢æ•°
    """
    @wraps(func)
    def wrapper(self, *args, **kwargs):
        result = func(self, *args, **kwargs)
        total_employees = len(self._staffs) + 1  # ã‚¹ã‚¿ãƒƒãƒ•æ•° + ç¤¾é•·
        print(f"ç¾åœ¨ã‚ãŒç¤¾ã®ç¤¾å“¡æ•°ã¯{total_employees}äººã«ãªã£ã¦ã„ã¾ã™")
        return result
    return wrapper


class Company:
    """
    ä¼šç¤¾ã‚¯ãƒ©ã‚¹
    
    ç¤¾å“¡ï¼ˆStaffï¼‰ã¨ç¤¾é•·ï¼ˆPresidentï¼‰ã‚’ç®¡ç†ã—ã¾ã™ã€‚
    
    Attributes:
        _staffs (List[Staff]): ç¤¾å“¡ã®ãƒªã‚¹ãƒˆ
        _ceo (President): ç¤¾é•·
    """
    
    def __init__(self):
        """Companyã‚¯ãƒ©ã‚¹ã®ã‚³ãƒ³ã‚¹ãƒˆãƒ©ã‚¯ã‚¿"""
        self._staffs: List[Staff] = []
        self._ceo: President = President(self)
    
    @property
    def staffs(self) -> List[Staff]:
        """
        ç¤¾å“¡ãƒªã‚¹ãƒˆã‚’å–å¾—ã™ã‚‹ï¼ˆãƒ—ãƒ­ãƒ‘ãƒ†ã‚£ï¼‰
        
        Returns:
            List[Staff]: ç¤¾å“¡ã®ãƒªã‚¹ãƒˆ
        """
        return self._staffs
    
    @property
    def ceo(self) -> President:
        """
        ç¤¾é•·ã‚’å–å¾—ã™ã‚‹ï¼ˆãƒ—ãƒ­ãƒ‘ãƒ†ã‚£ï¼‰
        
        Returns:
            President: ç¤¾é•·ã®ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹
        """
        return self._ceo
    
    @print_employee_count
    def set_dismissal_procedure(self, name: str) -> None:
        """
        è§£é›‡æ‰‹ç¶šãã‚’å®Ÿè¡Œã™ã‚‹
        
        æŒ‡å®šã•ã‚ŒãŸåå‰ã®ç¤¾å“¡ã‚’è§£é›‡ã—ã€ç¾åœ¨ã®ç¤¾å“¡æ•°ã‚’è¡¨ç¤ºã—ã¾ã™ã€‚
        ã“ã®ãƒ¡ã‚½ãƒƒãƒ‰ã¯ãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿ã«ã‚ˆã‚Šç¤¾å“¡æ•°ãŒè‡ªå‹•è¡¨ç¤ºã•ã‚Œã¾ã™ã€‚
        
        Args:
            name (str): è§£é›‡ã™ã‚‹ç¤¾å“¡ã®åå‰
        """
        self._staffs = [
            staff for staff in self._staffs 
            if staff.get_name() != name
        ]
        print(f"[è§£é›‡æ‰‹ç¶šãå®Œäº†] {name}ã•ã‚“ã®è§£é›‡æ‰‹ç¶šããŒå®Œäº†ã—ã¾ã—ãŸ")
    
    def __del__(self):
        """ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿ - ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ãŒå‰Šé™¤ã•ã‚Œã‚‹ã¨ãã«å‘¼ã°ã‚Œã‚‹"""
        print("[ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿] Companyã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ãŒå‰Šé™¤ã•ã‚Œã¾ã—ãŸ")
# ã€ã‚³ãƒ”ãƒ¼çµ‚äº†ï¼šã“ã“ã¾ã§ company.pyã€‘



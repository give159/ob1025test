# employee.py

class Employee:
    """ç¤¾å“¡ã®åŸºåº•ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self):
        self._name = ""
        self._salary = 0

    def get_name(self):
        return self._name

    def set_name(self, emp_name):
        self._name = emp_name

    def get_salary(self):
        return self._salary

    def set_salary(self, emp_salary):
        self._salary = emp_salary

    def __del__(self):
        print(f"[ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿] Employeeã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ '{self._name}' ãŒå‰Šé™¤ã•ã‚Œã¾ã—ãŸ")

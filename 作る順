    staff2 = Staff()
    staff2.set_name("éˆ´æœ¨æ¬¡éƒ")
    staff2.set_salary(300000)
    staff2.set_division("é–‹ç™ºéƒ¨")
    company.staffs.append(staff2)

    # ç¤¾é•·è¨­å®š
    company.ceo.set_name("å‰äº•æ‰äºº")
    company.ceo.set_salary(2500000)

    # æƒ…å ±è¡¨ç¤º
    for s in company.staffs:
        print(f"{s.get_name()} - {s.get_division()} - {s.get_salary()}å††")
    print(company.ceo.get_name())

    # ç¤¾é•·ã«ã‚ˆã‚‹è§£é›‡
    company.ceo.dismiss("ä½è—¤å¤ªéƒ")

    # ãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿ä»˜ãã®è§£é›‡æ‰‹ç¶šã
    company.set_dismissal_procedure("éˆ´æœ¨æ¬¡éƒ")

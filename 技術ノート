class TestStaff(unittest.TestCase):
    """å¢ƒç•Œå€¤ãƒ†ã‚¹ãƒˆ"""
    def test_salary_boundary(self):
        staff = Staff()
        
        # æœ€å°å€¤
        staff.set_salary(0)
        self.assertEqual(staff.get_salary(), 0)
        
        # æœ€å¤§å€¤
        staff.set_salary(10000000)
        self.assertEqual(staff.get_salary(), 10000000)
    
    """ç•°å¸¸ç³»ãƒ†ã‚¹ãƒˆ"""

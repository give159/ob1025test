# ãƒ•ã‚¡ã‚¤ãƒ«10: run_all_tests.py
# ============================================================
# ã€ã‚³ãƒ”ãƒ¼é–‹å§‹ï¼šã“ã“ã‹ã‚‰ä¸‹ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ run_all_tests.py ã«è²¼ã‚Šä»˜ã‘ã€‘
"""
run_all_tests.py
ã™ã¹ã¦ã®ãƒ†ã‚¹ãƒˆãƒ•ã‚¡ã‚¤ãƒ«ã‚’ã¾ã¨ã‚ã¦å®Ÿè¡Œã™ã‚‹ã‚¹ã‚¯ãƒªãƒ—ãƒˆ
"""

import unittest
import sys


def run_all_tests():
    """ã™ã¹ã¦ã®ãƒ†ã‚¹ãƒˆã‚’å®Ÿè¡Œ"""
    print("=" * 70)
    print("ç¤¾å“¡ç®¡ç†ã‚·ã‚¹ãƒ†ãƒ  - å…¨ãƒ†ã‚¹ãƒˆå®Ÿè¡Œ")
    print("=" * 70)
    print("\nå®Ÿè¡Œã™ã‚‹ãƒ†ã‚¹ãƒˆãƒ•ã‚¡ã‚¤ãƒ«:")
    print("  1. test_employee.py    - Employeeã‚¯ãƒ©ã‚¹ãƒ†ã‚¹ãƒˆ")
    print("  2. test_staff.py       - Staffã‚¯ãƒ©ã‚¹ãƒ†ã‚¹ãƒˆ")
    print("  3. test_president.py   - Presidentã‚¯ãƒ©ã‚¹ãƒ†ã‚¹ãƒˆ")
    print("  4. test_company.py     - Companyã‚¯ãƒ©ã‚¹ãƒ†ã‚¹ãƒˆ")
    print("  5. test_integration.py - çµ±åˆãƒ†ã‚¹ãƒˆ")
    print("=" * 70)
    print()
    
    # ãƒ†ã‚¹ãƒˆãƒ­ãƒ¼ãƒ€ãƒ¼ã®ä½œæˆ
    loader = unittest.TestLoader()
    suite = unittest.TestSuite()
    
    # å„ãƒ†ã‚¹ãƒˆãƒ•ã‚¡ã‚¤ãƒ«ã‹ã‚‰ãƒ†ã‚¹ãƒˆã‚’èª­ã¿è¾¼ã¿
    try:
        # test_employee.py
        from test_employee import TestEmployee
        suite.addTests(loader.loadTestsFromTestCase(TestEmployee))
        print("âœ“ test_employee.py ã‚’èª­ã¿è¾¼ã¿ã¾ã—ãŸ")
    except ImportError as e:
        print(f"âœ— test_employee.py ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—: {e}")
    
    try:
        # test_staff.py
        from test_staff import TestStaff
        suite.addTests(loader.loadTestsFromTestCase(TestStaff))
        print("âœ“ test_staff.py ã‚’èª­ã¿è¾¼ã¿ã¾ã—ãŸ")
    except ImportError as e:
        print(f"âœ— test_staff.py ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—: {e}")
    
    try:
        # test_president.py
        from test_president import TestPresident
        suite.addTests(loader.loadTestsFromTestCase(TestPresident))
        print("âœ“ test_president.py ã‚’èª­ã¿è¾¼ã¿ã¾ã—ãŸ")
    except ImportError as e:
        print(f"âœ— test_president.py ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—: {e}")
    
    try:
        # test_company.py
        from test_company import TestCompany
        suite.addTests(loader.loadTestsFromTestCase(TestCompany))
        print("âœ“ test_company.py ã‚’èª­ã¿è¾¼ã¿ã¾ã—ãŸ")
    except ImportError as e:
        print(f"âœ— test_company.py ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—: {e}")
    
    try:
        # test_integration.py
        from test_integration import TestIntegration
        suite.addTests(loader.loadTestsFromTestCase(TestIntegration))
        print("âœ“ test_integration.py ã‚’èª­ã¿è¾¼ã¿ã¾ã—ãŸ")
    except ImportError as e:
        print(f"âœ— test_integration.py ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—: {e}")
    
    print()
    print("=" * 70)
    print("ãƒ†ã‚¹ãƒˆå®Ÿè¡Œé–‹å§‹")
    print("=" * 70)
    print()
    
    # ãƒ†ã‚¹ãƒˆå®Ÿè¡Œ
    runner = unittest.TextTestRunner(verbosity=2)
    result = runner.run(suite)
    
    # çµæœã‚µãƒãƒªãƒ¼
    print("\n" + "=" * 70)
    print("ãƒ†ã‚¹ãƒˆçµæœã‚µãƒãƒªãƒ¼")
    print("=" * 70)
    print(f"å®Ÿè¡Œãƒ†ã‚¹ãƒˆæ•°: {result.testsRun}")
    print(f"æˆåŠŸ: {result.testsRun - len(result.failures) - len(result.errors)}")
    print(f"å¤±æ•—: {len(result.failures)}")
    print(f"ã‚¨ãƒ©ãƒ¼: {len(result.errors)}")
    
    if result.wasSuccessful():
        print("\nğŸ‰ ã™ã¹ã¦ã®ãƒ†ã‚¹ãƒˆãŒæˆåŠŸã—ã¾ã—ãŸï¼")
        print("=" * 70)
        print("å„ã‚¯ãƒ©ã‚¹ã¨ãã®æ©Ÿèƒ½ãŒæ­£ã—ãå®Ÿè£…ã•ã‚Œã¦ã„ã¾ã™ã€‚")
        print("=" * 70)
    else:
        print("\nâŒ ã„ãã¤ã‹ã®ãƒ†ã‚¹ãƒˆãŒå¤±æ•—ã—ã¾ã—ãŸ")
        print("=" * 70)
        if result.failures:
            print("\nå¤±æ•—ã—ãŸãƒ†ã‚¹ãƒˆ:")
            for test, traceback in result.failures:
                print(f"  - {test}")
        if result.errors:
            print("\nã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ãŸãƒ†ã‚¹ãƒˆ:")
            for test, traceback in result.errors:
                print(f"  - {test}")
        print("=" * 70)
    
    return result.wasSuccessful()


if __name__ == "__main__":
    try:
        success = run_all_tests()
        sys.exit(0 if success else 1)
    except Exception as e:
        print("\n" + "=" * 70)
        print("âŒ ãƒ†ã‚¹ãƒˆå®Ÿè¡Œä¸­ã«ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ")
        print("=" * 70)
        print(f"ã‚¨ãƒ©ãƒ¼å†…å®¹: {e}")
        print("\nç¢ºèªäº‹é …:")
        print("1. ã™ã¹ã¦ã®å¿…è¦ãªãƒ•ã‚¡ã‚¤ãƒ«ãŒåŒã˜ãƒ•ã‚©ãƒ«ãƒ€ã«ã‚ã‚‹ã‹")
        print("   - employee.py")
        print("   - staff.py")
        print("   - president.py")
        print("   - company.py")
        print("   - test_employee.py")
        print("   - test_staff.py")
        print("   - test_president.py")
        print("   - test_company.py")
        print("   - test_integration.py")
        print("   - run_all_tests.py (ã“ã®ãƒ•ã‚¡ã‚¤ãƒ«)")
        print("\n2. ä»¥ä¸‹ã®ã‚³ãƒãƒ³ãƒ‰ã§ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ç¢ºèª:")
        print("   dir *.py")
        print("=" * 70)
        sys.exit(1)

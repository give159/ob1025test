# ã€ã‚³ãƒ”ãƒ¼é–‹å§‹ï¼šã“ã“ã‹ã‚‰ä¸‹ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ test_company.py ã«è²¼ã‚Šä»˜ã‘ã€‘
"""
test_company.py
Companyã‚¯ãƒ©ã‚¹å°‚ç”¨ãƒ†ã‚¹ãƒˆãƒ•ã‚¡ã‚¤ãƒ«
"""

import unittest
import sys
from io import StringIO
from staff import Staff
from president import President
from company import Company


class TestCompany(unittest.TestCase):
    """Companyã‚¯ãƒ©ã‚¹ã®ãƒ†ã‚¹ãƒˆã‚±ãƒ¼ã‚¹"""
    
    def setUp(self):
        """å„ãƒ†ã‚¹ãƒˆã®å‰ã«å®Ÿè¡Œã•ã‚Œã‚‹æº–å‚™å‡¦ç†"""
        self.company = Company()
    
    def test_initial_state(self):
        """åˆæœŸçŠ¶æ…‹ã®ãƒ†ã‚¹ãƒˆ"""
        self.assertEqual(len(self.company.staffs), 0)
        self.assertIsNotNone(self.company.ceo)
        print("âœ“ åˆæœŸçŠ¶æ…‹ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_staffs_property(self):
        """staffsãƒ—ãƒ­ãƒ‘ãƒ†ã‚£ã®ãƒ†ã‚¹ãƒˆ"""
        self.assertIsInstance(self.company.staffs, list)
        print("âœ“ staffsãƒ—ãƒ­ãƒ‘ãƒ†ã‚£ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_ceo_property(self):
        """ceoãƒ—ãƒ­ãƒ‘ãƒ†ã‚£ã®ãƒ†ã‚¹ãƒˆ"""
        self.assertIsInstance(self.company.ceo, President)
        print("âœ“ ceoãƒ—ãƒ­ãƒ‘ãƒ†ã‚£ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_add_staff(self):
        """ç¤¾å“¡è¿½åŠ ã®ãƒ†ã‚¹ãƒˆ"""
        staff = Staff()
        staff.set_name("éˆ´æœ¨æ¬¡éƒ")
        self.company.staffs.append(staff)
        
        self.assertEqual(len(self.company.staffs), 1)
        self.assertEqual(self.company.staffs[0].get_name(), "éˆ´æœ¨æ¬¡éƒ")
        print("âœ“ ç¤¾å“¡è¿½åŠ ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_add_multiple_staff(self):
        """è¤‡æ•°ç¤¾å“¡ã®è¿½åŠ ãƒ†ã‚¹ãƒˆ"""
        staff1 = Staff()
        staff1.set_name("ä½è—¤å¤ªéƒ")
        self.company.staffs.append(staff1)
        
        staff2 = Staff()
        staff2.set_name("éˆ´æœ¨æ¬¡éƒ")
        self.company.staffs.append(staff2)
        
        staff3 = Staff()
        staff3.set_name("ç”°ä¸­èŠ±å­")
        self.company.staffs.append(staff3)
        
        self.assertEqual(len(self.company.staffs), 3)
        print("âœ“ è¤‡æ•°ç¤¾å“¡è¿½åŠ ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_multiple_staff_management(self):
        """è¤‡æ•°ç¤¾å“¡ã®ç®¡ç†ãƒ†ã‚¹ãƒˆ"""
        for i in range(5):
            staff = Staff()
            staff.set_name(f"ç¤¾å“¡{i+1}")
            staff.set_salary(200000 + i * 10000)
            staff.set_division(f"éƒ¨ç½²{i+1}")
            self.company.staffs.append(staff)
        
        self.assertEqual(len(self.company.staffs), 5)
        
        # å„ç¤¾å“¡ã®ãƒ‡ãƒ¼ã‚¿ãŒæ­£ã—ãä¿æŒã•ã‚Œã¦ã„ã‚‹ã‹ç¢ºèª
        for i, staff in enumerate(self.company.staffs):
            self.assertEqual(staff.get_name(), f"ç¤¾å“¡{i+1}")
            self.assertEqual(staff.get_salary(), 200000 + i * 10000)
            self.assertEqual(staff.get_division(), f"éƒ¨ç½²{i+1}")
        
        print("âœ“ è¤‡æ•°ç¤¾å“¡ç®¡ç†ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_set_dismissal_procedure(self):
        """è§£é›‡æ‰‹ç¶šããƒ¡ã‚½ãƒƒãƒ‰ã®ãƒ†ã‚¹ãƒˆ"""
        # ç¤¾å“¡ã‚’è¿½åŠ 
        staff1 = Staff()
        staff1.set_name("ä½è—¤å¤ªéƒ")
        self.company.staffs.append(staff1)
        
        staff2 = Staff()
        staff2.set_name("éˆ´æœ¨æ¬¡éƒ")
        self.company.staffs.append(staff2)
        
        # è§£é›‡å‰ã®ç¢ºèª
        self.assertEqual(len(self.company.staffs), 2)
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£ï¼ˆãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿ã®å‡ºåŠ›ã‚’æŠ‘åˆ¶ï¼‰
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # è§£é›‡å®Ÿè¡Œ
        self.company.set_dismissal_procedure("ä½è—¤å¤ªéƒ")
        
        # æ¨™æº–å‡ºåŠ›ã‚’å¾©å…ƒ
        sys.stdout = sys.__stdout__
        
        # è§£é›‡å¾Œã®ç¢ºèª
        self.assertEqual(len(self.company.staffs), 1)
        self.assertEqual(self.company.staffs[0].get_name(), "éˆ´æœ¨æ¬¡éƒ")
        print("âœ“ è§£é›‡æ‰‹ç¶šããƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_set_dismissal_procedure_decorator(self):
        """è§£é›‡æ‰‹ç¶šããƒ¡ã‚½ãƒƒãƒ‰ã®ãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿ãƒ†ã‚¹ãƒˆ"""
        # ç¤¾å“¡ã‚’è¿½åŠ 
        staff1 = Staff()
        staff1.set_name("ä½è—¤å¤ªéƒ")
        self.company.staffs.append(staff1)
        
        staff2 = Staff()
        staff2.set_name("éˆ´æœ¨æ¬¡éƒ")
        self.company.staffs.append(staff2)
        
        staff3 = Staff()
        staff3.set_name("ç”°ä¸­èŠ±å­")
        self.company.staffs.append(staff3)
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # è§£é›‡å®Ÿè¡Œ
        self.company.set_dismissal_procedure("éˆ´æœ¨æ¬¡éƒ")
        
        # å‡ºåŠ›å†…å®¹ã‚’å–å¾—
        output = captured_output.getvalue()
        
        # æ¨™æº–å‡ºåŠ›ã‚’å¾©å…ƒ
        sys.stdout = sys.__stdout__
        
        # ãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿ã®ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ãŒå«ã¾ã‚Œã¦ã„ã‚‹ã‹ç¢ºèª
        self.assertIn("ç¾åœ¨ã‚ãŒç¤¾ã®ç¤¾å“¡æ•°ã¯", output)
        self.assertIn("3äººã«ãªã£ã¦ã„ã¾ã™", output)  # ç¤¾å“¡2äºº + ç¤¾é•·1äºº
        
        print("âœ“ ãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿æ©Ÿèƒ½ãƒ†ã‚¹ãƒˆæˆåŠŸ")
    
    def test_ceo_configuration(self):
        """ç¤¾é•·ã®è¨­å®šãƒ†ã‚¹ãƒˆ"""
        self.company.ceo.set_name("å‰äº•æ‰äºº")
        self.company.ceo.set_salary(2500000)
        
        self.assertEqual(self.company.ceo.get_name(), "å‰äº•æ‰äººç¤¾é•·")
        self.assertEqual(self.company.ceo.get_salary(), 2500000)
        print("âœ“ ç¤¾é•·è¨­å®šãƒ†ã‚¹ãƒˆæˆåŠŸ")



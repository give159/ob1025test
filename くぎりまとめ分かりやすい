class Employee:
    """
    ç¤¾å“¡ã®åŸºåº•ã‚¯ãƒ©ã‚¹
    
    ã™ã¹ã¦ã®ç¤¾å“¡ã‚¿ã‚¤ãƒ—ã®åŸºæœ¬ã¨ãªã‚‹ã‚¯ãƒ©ã‚¹ã§ã™ã€‚
    åå‰ã¨çµ¦æ–™ã®æƒ…å ±ã‚’ç®¡ç†ã—ã¾ã™ã€‚
    
    Attributes:
        _name (str): ç¤¾å“¡ã®åå‰
        _salary (int): ç¤¾å“¡ã®çµ¦æ–™
    """
    
    def __init__(self):
        """Employeeã‚¯ãƒ©ã‚¹ã®ã‚³ãƒ³ã‚¹ãƒˆãƒ©ã‚¯ã‚¿"""
        self._name: str = ""
        self._salary: int = 0
    
    def get_name(self) -> str:
        """
        ç¤¾å“¡ã®åå‰ã‚’å–å¾—ã™ã‚‹
        
        Returns:
            str: ç¤¾å“¡ã®åå‰
        """
        return self._name
    
    def set_name(self, emp_name: str) -> None:
        """
        ç¤¾å“¡ã®åå‰ã‚’è¨­å®šã™ã‚‹
        
        Args:
            emp_name (str): è¨­å®šã™ã‚‹ç¤¾å“¡ã®åå‰
        """
        self._name = emp_name
    
    def get_salary(self) -> int:
        """
        ç¤¾å“¡ã®çµ¦æ–™ã‚’å–å¾—ã™ã‚‹
        
        Returns:
            int: ç¤¾å“¡ã®çµ¦æ–™
        """
        return self._salary
    
    def set_salary(self, emp_salary: int) -> None:
        """
        ç¤¾å“¡ã®çµ¦æ–™ã‚’è¨­å®šã™ã‚‹
        
        Args:
            emp_salary (int): è¨­å®šã™ã‚‹çµ¦æ–™
        """
        self._salary = emp_salary
    
    def __del__(self):
        """ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿ - ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ãŒå‰Šé™¤ã•ã‚Œã‚‹ã¨ãã«å‘¼ã°ã‚Œã‚‹"""
        print(f"[ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿] Employeeã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ '{self._name}' ãŒå‰Šé™¤ã•ã‚Œã¾ã—ãŸ")
# ã€ã‚³ãƒ”ãƒ¼çµ‚äº†ï¼šã“ã“ã¾ã§ employee.pyã€‘



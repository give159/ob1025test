# ============================================================
# ãƒ•ã‚¡ã‚¤ãƒ«9: test_integration.py
# ============================================================
# ã€ã‚³ãƒ”ãƒ¼é–‹å§‹ï¼šã“ã“ã‹ã‚‰ä¸‹ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ test_integration.py ã«è²¼ã‚Šä»˜ã‘ã€‘
"""
test_integration.py
çµ±åˆãƒ†ã‚¹ãƒˆ - å®Ÿéš›ã®ã‚·ãƒŠãƒªã‚ªã‚’ãƒ†ã‚¹ãƒˆ
"""

import unittest
import sys
from io import StringIO
from staff import Staff
from company import Company


class TestIntegration(unittest.TestCase):
    """çµ±åˆãƒ†ã‚¹ãƒˆ - å®Ÿéš›ã®ã‚·ãƒŠãƒªã‚ªã‚’ãƒ†ã‚¹ãƒˆ"""
    
    def test_complete_scenario(self):
        """å®Œå…¨ãªã‚·ãƒŠãƒªã‚ªãƒ†ã‚¹ãƒˆ"""
        print("\n" + "="*60)
        print("çµ±åˆãƒ†ã‚¹ãƒˆ: å®Œå…¨ãªã‚·ãƒŠãƒªã‚ªå®Ÿè¡Œ")
        print("="*60)
        
        # ä¼šç¤¾ä½œæˆ
        company = Company()
        print("1. ä¼šç¤¾ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ä½œæˆ âœ“")
        
        # ç¤¾å“¡è¿½åŠ 
        staff1 = Staff()
        staff1.set_name("ä½è—¤å¤ªéƒ")
        staff1.set_salary(200000)
        staff1.set_division("å–¶æ¥­éƒ¨")
        company.staffs.append(staff1)
        print(f"2. {staff1.get_name()}ã‚’è¿½åŠ  âœ“")
        
        staff2 = Staff()
        staff2.set_name("éˆ´æœ¨æ¬¡éƒ")
        staff2.set_salary(300000)
        staff2.set_division("é–‹ç™ºéƒ¨")
        company.staffs.append(staff2)
        print(f"3. {staff2.get_name()}ã‚’è¿½åŠ  âœ“")
        
        # ç¤¾é•·è¨­å®š
        company.ceo.set_name("å‰äº•æ‰äºº")
        company.ceo.set_salary(2500000)
        print(f"4. {company.ceo.get_name()}ã‚’è¨­å®š âœ“")
        
        # æ¤œè¨¼
        self.assertEqual(len(company.staffs), 2)
        self.assertEqual(company.ceo.get_name(), "å‰äº•æ‰äººç¤¾é•·")
        print("5. ç¤¾å“¡æ•°ã¨ç¤¾é•·åã‚’æ¤œè¨¼ âœ“")
        
        # ç¤¾å“¡æƒ…å ±è¡¨ç¤º
        print("\nç¾åœ¨ã®ç¤¾å“¡:")
        for staff in company.staffs:
            print(f"  - {staff.get_name()}: {staff.get_salary()}å††, {staff.get_division()}")
        print(f"ç¤¾é•·: {company.ceo.get_name()}: {company.ceo.get_salary()}å††")
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # è§£é›‡
        company.ceo.dismiss("ä½è—¤å¤ªéƒ")
        
        # æ¨™æº–å‡ºåŠ›ã‚’å¾©å…ƒ
        sys.stdout = sys.__stdout__
        
        print(f"\n6. {staff1.get_name()}ã‚’è§£é›‡")
        self.assertEqual(len(company.staffs), 1)
        print("   è§£é›‡å®Œäº† âœ“")
        
        # æœ€çµ‚ç¢ºèª
        remaining_staff = company.staffs[0]
        self.assertEqual(remaining_staff.get_name(), "éˆ´æœ¨æ¬¡éƒ")
        self.assertEqual(remaining_staff.get_salary(), 300000)
        self.assertEqual(remaining_staff.get_division(), "é–‹ç™ºéƒ¨")
        
        print("\næœ€çµ‚ç¤¾å“¡:")
        print(f"  - {remaining_staff.get_name()}: {remaining_staff.get_salary()}å††, {remaining_staff.get_division()}")
        print("="*60)
        print("çµ±åˆãƒ†ã‚¹ãƒˆå®Œäº† âœ“âœ“âœ“")
        print("="*60)
    
    def test_hire_and_fire_scenario(self):
        """é›‡ç”¨ã¨è§£é›‡ã®ã‚·ãƒŠãƒªã‚ªãƒ†ã‚¹ãƒˆ"""
        print("\n" + "="*60)
        print("çµ±åˆãƒ†ã‚¹ãƒˆ: é›‡ç”¨ã¨è§£é›‡ã‚·ãƒŠãƒªã‚ª")
        print("="*60)
        
        company = Company()
        company.ceo.set_name("ç¤¾é•·å¤ªéƒ")
        
        # åˆæœŸçŠ¶æ…‹
        self.assertEqual(len(company.staffs), 0)
        print("1. åˆæœŸçŠ¶æ…‹: ç¤¾å“¡0äºº âœ“")
        
        # 5äººé›‡ç”¨
        for i in range(1, 6):
            staff = Staff()
            staff.set_name(f"ç¤¾å“¡{i}")
            staff.set_salary(200000 + i * 10000)
            staff.set_division(f"éƒ¨ç½²{i}")
            company.staffs.append(staff)
        
        self.assertEqual(len(company.staffs), 5)
        print("2. 5äººé›‡ç”¨å®Œäº† âœ“")
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # 2äººè§£é›‡
        company.ceo.dismiss("ç¤¾å“¡2")
        company.ceo.dismiss("ç¤¾å“¡4")
        
        # æ¨™æº–å‡ºåŠ›ã‚’å¾©å…ƒ
        sys.stdout = sys.__stdout__
        
        self.assertEqual(len(company.staffs), 3)
        print("3. 2äººè§£é›‡å®Œäº†ï¼ˆæ®‹ã‚Š3äººï¼‰âœ“")
        
        # æ®‹ã£ãŸç¤¾å“¡ã‚’ç¢ºèª
        remaining_names = [s.get_name() for s in company.staffs]
        self.assertIn("ç¤¾å“¡1", remaining_names)
        self.assertIn("ç¤¾å“¡3", remaining_names)
        self.assertIn("ç¤¾å“¡5", remaining_names)
        self.assertNotIn("ç¤¾å“¡2", remaining_names)
        self.assertNotIn("ç¤¾å“¡4", remaining_names)
        print("4. æ­£ã—ã„ç¤¾å“¡ãŒæ®‹ã£ã¦ã„ã‚‹ã“ã¨ã‚’ç¢ºèª âœ“")
        
        print("="*60)
        print("é›‡ç”¨ã¨è§£é›‡ã‚·ãƒŠãƒªã‚ªãƒ†ã‚¹ãƒˆå®Œäº† âœ“âœ“âœ“")
        print("="*60)
    
    def test_dismissal_procedure_scenario(self):
        """è§£é›‡æ‰‹ç¶šãã‚·ãƒŠãƒªã‚ªãƒ†ã‚¹ãƒˆ"""
        print("\n" + "="*60)
        print("çµ±åˆãƒ†ã‚¹ãƒˆ: è§£é›‡æ‰‹ç¶šãã‚·ãƒŠãƒªã‚ª")
        print("="*60)
        
        company = Company()
        company.ceo.set_name("CEO")
        
        # 3äººé›‡ç”¨
        staff1 = Staff()
        staff1.set_name("Aã•ã‚“")
        staff1.set_salary(300000)
        staff1.set_division("å–¶æ¥­éƒ¨")
        company.staffs.append(staff1)
        
        staff2 = Staff()
        staff2.set_name("Bã•ã‚“")
        staff2.set_salary(350000)
        staff2.set_division("é–‹ç™ºéƒ¨")
        company.staffs.append(staff2)
        
        staff3 = Staff()
        staff3.set_name("Cã•ã‚“")
        staff3.set_salary(320000)
        staff3.set_division("ä¼ç”»éƒ¨")
        company.staffs.append(staff3)
        
        print("1. 3äººã®ç¤¾å“¡ã‚’é›‡ç”¨ âœ“")
        
        # æ¨™æº–å‡ºåŠ›ã‚’ã‚­ãƒ£ãƒ—ãƒãƒ£
        captured_output = StringIO()
        sys.stdout = captured_output
        
        # è§£é›‡æ‰‹ç¶šãå®Ÿè¡Œ
        company.set_dismissal_procedure("Bã•ã‚“")
        
        output = captured_output.getvalue()
        sys.stdout = sys.__stdout__
        
        # æ¤œè¨¼
        self.assertEqual(len(company.staffs), 2)
        self.assertIn("ç¾åœ¨ã‚ãŒç¤¾ã®ç¤¾å“¡æ•°ã¯3äººã«ãªã£ã¦ã„ã¾ã™", output)
        print("2. è§£é›‡æ‰‹ç¶šãå®Œäº†ï¼ˆãƒ‡ã‚³ãƒ¬ãƒ¼ã‚¿ã‚‚å‹•ä½œï¼‰âœ“")
        
        # æ®‹ã£ãŸç¤¾å“¡ã‚’ç¢ºèª
        remaining_names = [s.get_name() for s in company.staffs]
        self.assertIn("Aã•ã‚“", remaining_names)
        self.assertIn("Cã•ã‚“", remaining_names)
        self.assertNotIn("Bã•ã‚“", remaining_names)
        print("3. æ­£ã—ã„ç¤¾å“¡ãŒæ®‹ã£ã¦ã„ã‚‹ âœ“")
        
        print("="*60)
        print("è§£é›‡æ‰‹ç¶šãã‚·ãƒŠãƒªã‚ªãƒ†ã‚¹ãƒˆå®Œäº† âœ“âœ“âœ“")
        print("="*60)


if __name__ == "__main__":
    print("=" * 60)
    print("çµ±åˆãƒ†ã‚¹ãƒˆå®Ÿè¡Œ")
    print("=" * 60)
    unittest.main(verbosity=2)
# ã€ã‚³ãƒ”ãƒ¼çµ‚äº†ï¼šã“ã“ã¾ã§ test_integration.pyã€‘



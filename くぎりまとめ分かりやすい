from employee import Employee


class Staff(Employee):
    """
    ä¸€èˆ¬ç¤¾å“¡ã‚¯ãƒ©ã‚¹
    
    Employeeã‚¯ãƒ©ã‚¹ã‚’ç¶™æ‰¿ã—ã€æ‰€å±éƒ¨ç½²ã®æƒ…å ±ã‚’è¿½åŠ ã—ã¾ã™ã€‚
    
    Attributes:
        _division (str): æ‰€å±éƒ¨ç½²
    """
    
    def __init__(self):
        """Staffã‚¯ãƒ©ã‚¹ã®ã‚³ãƒ³ã‚¹ãƒˆãƒ©ã‚¯ã‚¿"""
        super().__init__()
        self._division: str = ""
    
    def get_division(self) -> str:
        """
        æ‰€å±éƒ¨ç½²ã‚’å–å¾—ã™ã‚‹
        
        Returns:
            str: æ‰€å±éƒ¨ç½²å
        """
        return self._division
    
    def set_division(self, emp_division: str) -> None:
        """
        æ‰€å±éƒ¨ç½²ã‚’è¨­å®šã™ã‚‹
        
        Args:
            emp_division (str): è¨­å®šã™ã‚‹éƒ¨ç½²å
        """
        self._division = emp_division
    
    def __del__(self):
        """ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿ - ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ãŒå‰Šé™¤ã•ã‚Œã‚‹ã¨ãã«å‘¼ã°ã‚Œã‚‹"""
        print(f"[ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ã‚¿] Staffã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ '{self._name}' ãŒå‰Šé™¤ã•ã‚Œã¾ã—ãŸ")
# ã€ã‚³ãƒ”ãƒ¼çµ‚äº†ï¼šã“ã“ã¾ã§ staff.pyã€‘


# ============================================================
# ãƒ•ã‚¡ã‚¤ãƒ«3: president.py
# ============================================================
# ã€ã‚³ãƒ”ãƒ¼é–‹å§‹ï¼šã“ã“ã‹ã‚‰ä¸‹ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ president.py ã«è²¼ã‚Šä»˜ã‘ã€‘
"""
